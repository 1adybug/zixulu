        "format": "prettier --write .",
        "fg": "npm run format && git add . && git commit -m \"âœ¨feature: format\"",
        "lint": "eslint . --fix",
        "ucr": "npx zixulu acr"
    },
    "dependencies": {
        "@iarna/toml": "^3.0.0",
        "chalk": "^5.6.2",
        "clipboardy": "^5.0.0",
        "commander": "^14.0.2",
        "consola": "^3.4.2",
        "dayjs": "^1.11.19",
        "deepsea-tools": "^5.43.1",
        "https-proxy-agent": "^7.0.6",
        "inquirer": "^12.11.1",
        "jsdom": "^27.2.0",
        "json5": "^2.2.3",
        "md5": "^2.3.0",
        "node-fetch": "^3.3.2",
        "semver": "^7.7.3",
        "simple-git": "^3.30.0",
        "soda-nodejs": "^0.8.5",
