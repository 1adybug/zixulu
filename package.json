        "@types/md5": "^2.3.6",
        "@types/node": "^24.10.1",
        "@types/semver": "^7.7.1",
        "globals": "^16.5.0",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.7",
        "prettier": "^3.6.2",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.47.0"
    },
    "resolutions": {
        "string-width": "^4",
        "strip-ansi": "^6"
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.com/"
    },
    "volta": {
        "node": "22.21.1"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
