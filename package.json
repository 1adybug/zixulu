{
    "name": "zixulu",
    "version": "1.71.3",
    "description": "A CLI tool for project management and automation",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/1adybug/zixulu.git"
    },
    "homepage": "https://github.com/1adybug/zixulu#readme",
    "bugs": {
        "url": "https://github.com/1adybug/zixulu/issues"
    },
    "type": "module",
    "main": "dist/index.js",
    "bin": "dist/index.js",
    "files": [
        "compiled",
