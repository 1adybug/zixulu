{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "esModuleInterop": true,
        "paths": {
            "@/*": ["./src/*"],
            "@/constant/*": ["./src/constant/*"],
            "@/utils/*": ["./src/utils/*"]
        }
    },
    "exclude": ["dist"]
}
