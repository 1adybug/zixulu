{
    "compilerOptions": {
        "strict": true,
        "declaration": true,
        "skipLibCheck": true,
        "baseUrl": "./",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "paths": {
            "@src/*": [
                "./src/*"
            ],
            "@constant/*": [
                "./src/constant/*"
            ],
            "@utils/*": [
                "./src/utils/*"
            ]
        }
    },
    "exclude": [
        "dist"
    ]
}